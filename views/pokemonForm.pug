extends request.pug

block content
  .container
    form#signin(name="request" method="post" action="/request")
      .row
        div(class="col s12 m6 l3")
          h5 Attributes
            .row
              div(class="col s6")
                select(name="ability")
                  option(value="" disabled selected) Ability
                  each ability in pokemon.Abilities
                    option(value="") #{ability.identifier}

            div(class="col s6")
              select(id="" name="nature")
                option(value="" disabled selected) Nature
                option(value="Hardy") Hardy
                option(value="Lonely") Lonely
                option(value="Adamant") Adamant
                option(value="Naughty") Naughty
                option(value="Brave") Brave
                option(value="Bold") Bold
                option(value="Docile") Docile
                option(value="Impish") Impish
                option(value="Lax") Lax
                option(value="Relaxed") Relaxed
                option(value="Modest") Modest
                option(value="Mild") Mild
                option(value="Bashful") Bashful
                option(value="Rash") Rash
                option(value="Quiet") Quiet
                option(value="Calm") Calm
                option(value="Gentle") Gentle
                option(value="Careful") Careful
                option(value="Quirky") Quirky
                option(value="Sassy") Sassy
                option(value="Timid") Timid
                option(value="Hasty") Hasty
                option(value="Jolly") Jolly
                option(value="Naive") Naive
                option(value="Serious") Serious
          //- .row
          //-   div(class="col s6")
          //-     select(id="" name="item")
          //-       option(value="" disabled selected) Item
          //-       each item in items
          //-         option(value=item.name) #{item.name}
                  
            div(class="col s6")
              select(id="" name="gender")
                option(value="" disabled selected) Gender
                option(value="Female") Female
                option(value="Male") Male
          .row
            div(class="col s12")
              div(id="test-slider" name="level")
              label(for="test-slider") Level
        div(class="col s12 m6 l3")
          h5 Moves
          select(id="" class="col s12")
            option(value="" disabled selected name="move_1") Move 1
              each move in pokemon.Moves
                option(value="") #{move.identifier}
          select(id="" class="col s12")
            option(value="" disabled selected name="move_2") Move 2
              each move in pokemon.Moves
                option(value="") #{move.identifier}
          select(id="" class="col s12")
            option(value="" disabled selected name="move_3") Move 3
              each move in pokemon.Moves
                option(value="") #{move.identifier}
          select(id="" class="col s12")
            option(value="" disabled selected name="move_4") Move 4
              each move in pokemon.Moves
                option(value="") #{move.identifier}
        div(class="col s1 m6 l3")
          h5 IV Spread
          select(id="" class="col s12" name="hp_iv")
            option(value="" disabled selected) HP
              option(value="") N/A
              option(value="") 0
              option(value="") 31
          select(id="" class="col s12" name="attack_iv")
            option(value="" disabled selected) Attack
              option(value="") N/A
              option(value="") 0
              option(value="") 31
          select(id="" class="col s12" name="defense_iv")
            option(value="" disabled selected) Move 3
              option(value="" disabled selected) Defense
              option(value="") N/A
              option(value="") 0
              option(value="") 31
          select(id="" class="col s12" name="sp_att_iv")
            option(value="" disabled selected) Sp. Attack
              option(value="") N/A
              option(value="") 0
              option(value="") 31
          select(id="" class="col s12" name="sp_def_iv")
            option(value="" disabled selected) Sp. Defense
              option(value="") N/A
              option(value="") 0
              option(value="") 31
          select(id="" class="col s12" name="speed")
            option(value="" disabled selected) Speed
              option(value="") N/A
              option(value="") 0
              option(value="") 31
      input.btn(type="submit" value="Submit Request")