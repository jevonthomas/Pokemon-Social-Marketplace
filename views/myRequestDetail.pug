extends request.pug

block content
  body
    .container
        div(class="fixed-action-btn")
          a(class="btn-floating btn-large red" href=`/request/user/${session.passport.user.id}/view/${requests.id}/trade-offers`) View Trade Requests
        div(class="col s12 m8 offset-m2 l6")
          div
            div(class="row valign-wrapper")
                div(class="col s2")
                  img(src=`/sprites/pokemon/${requests.species_id}.png` alt=requests.name class="responsive-img")
                div(class="col s10") #{requests.name}
                  ul  
                    li Level: #{requests.level}
                    li Nature: #{requests.nature}
                    li Ability: #{requests.ability}
                    li Held Item: #{requests.item}
            div(class="row")
              div(class="col s4") Moves
                .row
                  ul(class="col s12")
                    li Move 1: #{requests.move_1}
                    li Move 2: #{requests.move_2}
                    li Move 3: #{requests.move_3}
                    li Move 4: #{requests.move_4}
              div(class="col s6") IV Spread
                .row
                  ul(class="col s6")  
                    li HP: #{requests.hp_iv}
                    li Attack: #{requests.attack_iv}
                    li Defense: #{requests.defense_iv}
                    li Sp. Attack: #{requests.sp_att_iv}
                  ul(class="col s6")
                    li Sp. Defense: #{requests.sp_def_iv}
                    li Speed: #{requests.speed_iv}
        each offer in requests.Offers
          div(class="col s12 m8 offset-m2 l6")
            div
              div(class="row valign-wrapper")
                  div(class="col s10") #{offer.name}
                      ul  
                        li Level: #{offer.level}
                        li Nature: #{offer.nature}
                        li Ability: #{offer.ability}
                        li Held Item: #{offer.item}
                  div(class="col s2")
                    img(src=`/sprites/pokemon/${offer.species_id}.png` alt=offer.name class="responsive-img")
              div(class="row")
                div(class="col s4") Moves
                  .row
                        ul(class="col s12")
                          li Move 1: #{offer.move_1}
                          li Move 2: #{offer.move_2}
                          li Move 3: #{offer.move_3}
                          li Move 4: #{offer.move_4}
                div(class="col s6") IV Spread
                  .row
                        ul(class="col s6")  
                          li HP: #{offer.hp_iv}
                          li Attack: #{offer.attack_iv}
                          li Defense: #{offer.defense_iv}
                          li Sp. Attack: #{offer.sp_att_iv}
                        ul(class="col s6")
                          li Sp. Defense: #{offer.sp_def_iv}
                          li Speed: #{offer.speed_iv}