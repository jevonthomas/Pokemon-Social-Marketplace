doctype html
html
  head
    title Pokemon Social Marketplace
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    link(href="/css/main.css", rel="stylesheet")

  body
    include partials/nav.pug
    .container
      p My Account
      div(class="row valign-wrapper")
                div(class="col s2")
                  img(src=`/images/${user.avatar}` alt="profile image" class="responsive-img")
                div(class="col s10") #{user.first_name} #{user.last_name}
                    ul  
                      li Email: #{user.email}
                      li Friend Code: #{user.ds_code}

    script
      include ../node_modules/jquery/dist/jquery.min.js
      include ../node_modules/materialize-css/dist/js/materialize.min.js
      include ../client/client.js
    script(src="/javascript/main.js" type="text/javascript")
    script(src="/javascript/request.js" type="text/javascript")
